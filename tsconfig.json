{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "rootDir": ".",
    "outDir": "build",
    "noImplicitAny": true,
    "lib": ["es2016", "dom", "es5"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "**/tests/*"]
}
